<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clases.NumWins"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:background="#000000"
        android:textColor="#ffffff"
        android:text="NUMEROS GANADORES"
        android:gravity="center"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#000000"
        android:text="Fecha:"
        android:layout_marginTop="50dp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/fecha_num_jugado"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="30dp"
        android:inputType="date"
        android:gravity="center"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="200dp"
        android:text="dd/mm/aaaa"
        android:layout_marginTop="10dp"
        android:gravity="center"
        />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="consultar num_ganadores"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:onClick="FechaNumerosGanadores"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="regresar al menu"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="RegresarAlMenu"/>


</LinearLayout>